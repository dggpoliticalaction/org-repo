{
  "name": "tscord",
  "version": "1.0.0",
  "description": "A fully-featured discord bot template written in Typescript, intended to provide a framework that's easy to use, extend and modify",
  "license": "MIT",
  "main": "build/main.js",
  "tscord": {
    "version": "2.4"
  },
  "scripts": {
    "build": "pnpm run build:clean && pnpm run build:compile && pnpm run install:plugins",
    "build:clean": "rimraf build/",
    "build:compile": "tsc --project tsconfig.json --skipLibCheck && pnpm run build:alias",
    "build:alias": "tsc-alias -p tsconfig.json",
    "build:start": "pnpm run build && pnpm run start",
    "install:plugins": "installoop --rootDir=./build/plugins",
    "start": "cross-env NODE_ENV=production node build/main.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node --transpile-only src/main.ts",
    "i18n": "typesafe-i18n",
    "migration:create": "pnpx mikro-orm migration:create",
    "migration:up": "pnpx mikro-orm migration:up",
    "migration:down": "pnpx mikro-orm migration:down",
    "plugins:install": "installoop --rootDir=./src/plugins",
    "postinstall": "pnpm run plugins:install",
    "lint": "eslint .",
    "lint:ci": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "check-types": "cross-env NODE_OPTIONS=--no-deprecation tsc --noEmit"
  },
  "dependencies": {
    "@discordx/importer": "~1.3.3",
    "@discordx/pagination": "~3.5.8",
    "@discordx/utilities": "~7.0.5",
    "@mikro-orm/cli": "~6.4.16",
    "@mikro-orm/core": "~6.4.16",
    "@mikro-orm/entity-generator": "~6.4.16",
    "@mikro-orm/migrations": "~6.4.16",
    "@mikro-orm/sql-highlighter": "~1.0.1",
    "@mikro-orm/sqlite": "~6.4.16",
    "@tsed/common": "^7.86.3",
    "@tsed/core": "^7.86.3",
    "@tsed/di": "^7.86.3",
    "@tsed/exceptions": "^7.86.3",
    "@tsed/json-mapper": "^7.86.3",
    "@tsed/platform-express": "^7.86.3",
    "@tsed/schema": "^7.86.3",
    "@tsed/swagger": "^7.86.3",
    "archiver": "^7.0.1",
    "axios": "~1.7.9",
    "bindings": "^1.5.0",
    "body-parser": "^1.20.3",
    "boxen": "~5.1.2",
    "case": "~1.6.3",
    "chalk": "~4.1.2",
    "chokidar": "~3.6.0",
    "cron": "~3.2.1",
    "cron-validator": "~1.3.1",
    "cross-env": "~7.0.3",
    "dayjs": "~1.11.13",
    "discord-api-types": "~0.37.120",
    "discord-logs": "~2.2.1",
    "discord-oauth2": "~2.12.1",
    "discord.js": "~14.16.3",
    "discordx": "~11.12.5",
    "dotenv": "^16.6.1",
    "envalid": "^8.0.0",
    "express": "^4.21.2",
    "fast-folder-size": "~2.3.0",
    "fs": "0.0.1-security",
    "http-status-codes": "~2.3.0",
    "image-hash": "~5.3.2",
    "imgur": "~2.4.3",
    "installoop": "^1.1.0",
    "joi": "~17.13.3",
    "node-os-utils": "~1.3.7",
    "ora": "~5.4.1",
    "pidusage": "~3.0.2",
    "reflect-metadata": "~0.2.2",
    "rentry-pastebin": "~1.3.0",
    "rxeta": "~1.1.2",
    "saveqlite": "~1.1.2",
    "semver": "^7.7.2",
    "sqlite3": "^5.1.7",
    "stacktrace-parser": "~0.1.11",
    "swagger-ui-express": "~5.0.1",
    "ts-toolbelt": "^9.6.0",
    "tsyringe": "~4.10.0",
    "typesafe-i18n": "^5.26.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@antfu/eslint-config": "^2.27.3",
    "@types/archiver": "^6.0.3",
    "@types/body-parser": "^1.19.6",
    "@types/dateformat": "~5.0.3",
    "@types/express": "~4.17.23",
    "@types/node": "~20.17.58",
    "@types/node-os-utils": "~1.3.4",
    "@types/pidusage": "~2.0.5",
    "@types/semver": "^7.7.0",
    "@types/swagger-ui-express": "~4.1.8",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "ncp": "~2.0.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "~4.1.5",
    "plop": "^2.7.6",
    "rimraf": "~5.0.10",
    "ts-node": "~10.9.2",
    "tsc-alias": "~1.8.16",
    "tsconfig-paths": "~4.2.0",
    "tscord": "^2.0.3",
    "typescript": "^5.8.3",
    "eslint": "^9.16.0",
    "prettier": "^3.4.2"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=3"
  },
  "volta": {
    "node": "22.13.0"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./mikro-orm.config.ts",
      "./build/mikro-orm.config.js"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "src/i18n/**/!(i18n-types.ts)",
      "src/{events,commands}/**/*.{ts,js}"
    ]
  }
}
