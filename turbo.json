{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "globalEnv": [
        "VERCEL_PROJECT_PRODUCTION_URL",
        "PREVIEW_SECRET",
        "DATABASE_URI",
        "PAYLOAD_SECRET",
        "CRON_SECRET"
      ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "VERCEL_PROJECT_PRODUCTION_URL",
        "PREVIEW_SECRET",
        "DATABASE_URI",
        "PAYLOAD_SECRET",
        "CRON_SECRET"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
